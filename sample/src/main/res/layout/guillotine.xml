<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <com.github.florent37.materialviewpager.sample.Transparent
        android:id="@+id/popup_window"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/search"
                android:layout_gravity="left"
                android:id="@+id/se"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_gravity="right"
                android:id="@+id/et"
                android:textColor="@color/blue"
                />



        </LinearLayout>


    </com.github.florent37.materialviewpager.sample.Transparent>


    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />



        <Button

            android:id="@+id/handle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>



    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/materialViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:viewpager_logo="@layout/header_logo_text"
        app:viewpager_logoMarginTop="30dp"
        app:viewpager_color="@color/colorPrimary"
        app:viewpager_headerHeight="110dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="true"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_parallaxHeaderFactor="1.5"
        app:viewpager_headerAdditionalHeight="20dp"
        app:viewpager_displayToolbarWhenSwipe="true"
        app:viewpager_transparentToolbar="true"
        app:viewpager_animatedHeaderImage="true"
        app:viewpager_disableToolbar="true"
        app:viewpager_pagerTitleStrip="@layout/my_tabs"

        />




</LinearLayout>


